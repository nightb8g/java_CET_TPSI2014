<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.*?>
<?import java.net.*?>
<?import java.util.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane id="AnchorPane" prefHeight="400.0" prefWidth="600.0" styleClass="mainFxmlClass" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/8" fx:controller="bitmilhoes.controller.PainelApostadoresController">
    <stylesheets>
        <URL value="@/bitmilhoes/style/painelapostadores.css" />
    </stylesheets>
   <children>
      <BorderPane prefHeight="400.0" prefWidth="600.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
         <top>
            <ToolBar prefHeight="40.0" prefWidth="200.0" BorderPane.alignment="CENTER">
              <items>
                <Button fx:id="btnNovo" onAction="#handlesNovoApostador"  mnemonicParsing="false" text="Novo" />
                  <Button fx:id="btnAlterar" mnemonicParsing="false" text="Alterar" />
                  <Button fx:id="btnEliminar" mnemonicParsing="false" text="Eliminar" />
              </items>
            </ToolBar>
         </top>
         <center>
            <TableView prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER">
              <columns>
                <TableColumn prefWidth="75.0" text="Telefone" />
                  <TableColumn prefWidth="75.0" text="Nome" />
                  <TableColumn prefWidth="75.0" text="Data Nascimento" />
                  <TableColumn prefWidth="75.0" text="Saldo" />
              </columns>
            </TableView>
         </center>
      </BorderPane>
   </children>
</AnchorPane>
